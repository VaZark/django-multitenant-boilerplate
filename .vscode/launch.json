  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start app",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Tenant Commands",
      "type": "python",
      "request": "launch",
      "program": "tenant_manage.py",
      "args": ["pod1", "tenant2", "migrate"],
      "console": "integratedTerminal",
      "justMyCode": true
    },

    {
      "name": "Run Tenant Migrations",
      "type": "python",
      "request": "launch",
      "program": "manage.py",
      "args": ["add_tenants"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
